<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default center-block">
        <div class="panel-heading">
          <h2 class="panel-title pull-left">Password Reset</h2>
          <div class="right-text">
            <%= render 'devise/shared/links' %>
          </div>
        </div>
        <div class="panel-body">
          <%= devise_error_messages! %>
          <fieldset>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <div class="input-holder">
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %>
            </div>

            <div class="submit-holder">
              <%= f.submit "Send me reset password instructions", tag: 'button', class: 'btn btn-primary btn-block' %>
            </div>
          </div>
          <% end %>
        </fieldset>

      </div>
    </div>
  </div>
</div>
</div>
